{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": false,      // 不生成 .d.ts 定义文件
    "sourceMap": false,        // 不生成 .js.map 映射文件
    "declarationMap": false,    // 不生成 .d.ts.map (如果有这个选项的话)
    "paths": {
      "@aastar/sdk": ["./packages/sdk/src"],
      "@aastar/sdk/*": ["./packages/sdk/src/*"],
      "@aastar/core": ["./packages/core/src"],
      "@aastar/core/*": ["./packages/core/src/*"],
      "@aastar/account": ["./packages/account/src"],
      "@aastar/account/*": ["./packages/account/src/*"],
      "@aastar/paymaster": ["./packages/paymaster/src"],
      "@aastar/paymaster/*": ["./packages/paymaster/src/*"],
      "@aastar/tokens": ["./packages/tokens/src"],
      "@aastar/tokens/*": ["./packages/tokens/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "ext",
    "lib",
    "**/node_modules",
    "**/dist"
  ]
}
